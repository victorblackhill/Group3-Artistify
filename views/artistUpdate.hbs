<form action="/dashboard/artists/update/{{artist._id}}" method="post">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{artist.name}}">
    <label for="isband">Is band</label>
    <select name="isBand" id="isband" value="{{artist.isBand}}">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <label for="description">Description</label>
    <input type="text" id="description" name="description" value="{{artist.description}}">
    <label for="picture">Picture</label>
    <input type="text" id="picture" name="picture" value="{{artist.picture}}">
    <button type="submit">Update</button>
</form>